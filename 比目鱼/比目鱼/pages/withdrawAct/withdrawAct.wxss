.content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: "PingFangSC-Regular";
  background-color: white;
  color: #595959;
}

.header {
  display: flex;
  flex-direction: column;
  width: 100%;
  text-align: left;
  border-bottom: 10rpx solid #f2f1f6;
  padding: 10rpx 10rpx 30rpx 50rpx;
}

.headerTitle {
  font-size: 14px;
}

.headerAmount {
  font-size: 24px;
}

.headerAmountUnit {
  font-size: 12px;
}

.withdraw {
  display: flex;
  flex-direction: column;
  width: 100%;
  text-align: center;
  border-bottom: 1px solid #f2f1f6;
  padding: 10rpx 10rpx 30rpx 50rpx;
  justify-content: center;
}

.withdrawTitle {
  font-size: 14px;
  text-align: left;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  width: 50%;
}

